<?xml version='1.0' encoding='utf-8'?>
<widget id="pl.dwape" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CordovaTest</name>
    <description>
        My sample Apache Cordova application.
    </description>
    <author email="piotrek.peciak@gmail.com">
        Piotr PÄ™ciak
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-background" spec="https://github.com/PiotrPeciak/cordova-background.git" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="22" />
        <preference name="permissions" value="none" />
		
        <allow-intent href="market:*" />
    </platform>
</widget>
